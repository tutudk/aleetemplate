{%- capture section_style -%}
    {%- if section.settings.max_with != blank -%}
        --st-mx-w: {{ section.settings.max_with }};
    {%- endif -%}
    {%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
        --st-bg-cl: {{ section.settings.color_bg }};
    {%- endif -%}
    {%- if section.settings.padding_block != blank -%}
       --st-pd-dt: {{ section.settings.padding_block }};
    {%- endif -%}
    {%- if section.settings.padding_block_m != blank -%}
       --st-pd-mb: {{ section.settings.padding_block_m }};
    {%- endif -%}
    {%- if section.settings.margin_block != blank -%}
        --st-mg: {{ section.settings.margin_block }};
    {%- endif -%}
{%- endcapture -%}
<div class="vela-section section__heading overflow-hidden" {% if section_style %}style="{{ section_style }}"{% endif %}>
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section-inner position-relative">
            <div class="heading-wrapper">
                {%- for block in section.blocks -%}
                    <div class="heading__text heading__{{ block.settings.title_style }} text-{{ block.settings.text_alignment }} {{ block.settings.text_style }} {{ block.settings.text_font-weight }}" style=" --ht-cl: {{ block.settings.text_color_desktop }}; --ht-fs: {{ block.settings.text_font_size_desktop }}px;--ht-fs-l: {{ block.settings.text_font_size_tablet }}px;--ht-fs-m: {{ block.settings.text_font_size_mobile }}px;{% if block.settings.margin_desktop != blank %} --ht-m: {{ block.settings.margin_desktop }};{% endif %}{% if block.settings.margin_tablet != blank %}--ht-m-l: {{ block.settings.margin_tablet }};{% endif %}{% if block.settings.margin_mobile != blank %}--ht-m-m: {{ block.settings.margin_mobile }};{% endif %}"><span>{{ block.settings.text }}</span></div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Heading",
        "tag": "section",
        "class": "velaFramework",
        "disabled_on": {
            "groups": ["header", "footer"]
        },
        "settings":[
            {
                "type": "header",
                "content": "Design Section"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Make section full width"
            },
            {
                "type": "text",
                "id": "max_with",
                "label": "Container max width?(px)",
                "info": "Ex: 1440px"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "Background Color",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "Padding",
                "placeholder": "0px 0px",
                "info": "Ex: 0px 0px 0px 0px"
            },
            {
                "type": "text",
                "id": "padding_block_m",
                "label": "Padding on the mobile",
                "placeholder": "0px 0px",
                "info": "Ex: 0px 0px 0px 0px and use mobile only"
            },
            {
                "type": "text",
                "id": "margin_block",
                "label": "Margin",
                "placeholder": "0px 0px",
                "default": "0 0 60px",
                "info": "Ex: 0px 0px 0px 0px"
            }
        ],
  		"blocks": [
			{
				"type": "text",
				"name": "Text",
				"settings": [
                    {
                        "type": "select",
                        "id": "title_style",
                        "label": "Style",
                        "default": "default",
                        "options": [
                            {
                                "value": "default",
                                "label": "Default"
                            },
                            {
                                "value": "style1",
                                "label": "Style1"
                            },
                            {
                                "value": "style2",
                                "label": "Style2"
                            }
                        ]
                    },
                    {
                        "type": "html",
                        "id": "text",
                        "label": "Text",
                        "default": "<div><p>Use HTML to format your text so it can be easily read.<br/>This text can be used to share information about your brand with customers.</p></div>"
                    },
                    {
                        "type": "select",
                        "id": "text_alignment",
                        "label": "Text alignment",
                        "default": "center",
                        "options": [
                            {
                                "value": "start",
                                "label": "Left"
                            },
                            {
                                "value": "center",
                                "label": "Center"
                            },
                            {
                                "value": "end",
                                "label": "Right"
                            }
                        ]
                    },
					{
						"type": "select",
						"id": "text_style",
						"label": "Font family",
						"default": "text",
						"options": [
							{
								"value": "text",
								"label": "Text"
							},
							{
								"value": "ff-heading",
								"label": "Heading"
							},
                            {
								"value": "ff-special",
								"label": "Special"
							}
						]
					},
                    {
						"type": "select",
						"id": "text_font-weight",
						"label": "Font weight",
						"default": "fw-normal",
						"options": [
							{
								"value": "fw-normal",
								"label": "Normal"
							},
							{
								"value": "fw-light",
								"label": "Light"
							},
                            {
								"value": "fw-medium",
								"label": "Medium"
							},
                            {
								"value": "fw-semibold",
								"label": "Semibold"
							},
                            {
								"value": "fw-bolder",
								"label": "Bolder"
							},
                            {
								"value": "fw-bold",
								"label": "Bold"
							}
						]
					},
                    {
                        "type": "color",
                        "id": "text_color_desktop",
                        "label": "Color",
                        "default": "#000000"
                    },
                    {
						"type": "header",
						"content": "Config for desktop"
					},
					{
						"type": "range",
						"id": "text_font_size_desktop",
						"min": 10,
						"max": 100,
						"step": 1,
						"unit": "px",
						"label": "Font size",
						"default": 16
					},
                    {
						"type": "text",
						"id": "margin_desktop",
						"label": "Margin",
						"info": "Ex: 10px 10px 10px 10px"
					},
                    {
						"type": "header",
						"content": "Config for Tablets"
					},
					{
						"type": "range",
						"id": "text_font_size_tablet",
						"min": 10,
						"max": 100,
						"step": 1,
						"unit": "px",
						"label": "Font size",
						"default": 16
					},
                    {
						"type": "text",
						"id": "margin_tablet",
						"label": "Margin",
						"info": "Ex: 10px 10px 10px 10px"
					},
                    {
						"type": "header",
						"content": "Config for Mobile"
					},
					{
						"type": "range",
						"id": "text_font_size_mobile",
						"min": 10,
						"max": 100,
						"step": 1,
						"unit": "px",
						"label": "Font size",
						"default": 16
					},
                    {
						"type": "text",
						"id": "margin_mobile",
						"label": "Margin",
						"info": "Ex: 10px 10px 10px 10px"
					}
				]
			}
        ],
        "presets": [
            {
                "name": "Heading",
                "blocks": [
                    {
                        "type":"text",
                        "settings": {
                            "text": "Caption",
                            "text_style": "ff-heading",
                            "text_color_desktop": "#000000",
                            "text_font_size_desktop": 12
                        }
                    },
                    {
                        "type":"text",
                        "settings": {
                            "text": "Heading",
                            "text_style": "ff-heading",
                            "text_color_desktop": "#000000",
                            "text_font_size_desktop": 36
                        }
                    },
					{
                        "type":"text",
                        "settings": {
                            "text": "<div><p>Use HTML to format your text so it can be easily read.<br/>This text can be used to share information about your brand with customers.</p></div>",
                            "text_style": "text",
                            "text_color_desktop": "#666666",
                            "text_font_size_desktop": 14
                        }
                    }
                ]
            }
        ]
    }
{% endschema %}