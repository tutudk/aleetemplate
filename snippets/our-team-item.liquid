        <div class="about-member__image position-relative mb-3 mb-md-4">
            <div class="aboutIcon d-flex justify-content-{{ section.settings.text_align }} rounded-circle overflow-hidden">
                {%- if block.settings.image != blank -%}
                    {% render 'img-global', image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop, image_style: true %}
                {%- else -%} 
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
