                        {%- if block.settings.tw_link != blank -%}
                            <li class="twitter">
                                <a target="_blank" href="{{ block.settings.tw_link }}" class="d-flex justify-content-center align-items-center btn-social--twitter">
                                    {%- render 'icons', icon: 'twitter' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.in_link != blank -%}
                            <li class="youtube">
                                <a target="_blank" href="{{ block.settings.in_link }}"  class="d-flex justify-content-center align-items-center btn-social--youtube">
                                    <i class="fa fa-youtube"></i>
                                    {%- render 'icons', icon: 'youtube' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.instagram_link != blank -%}
                            <li class="instagram">
                                <a target="_blank" href="{{ block.settings.instagram_link }}" class="d-flex justify-content-center align-items-center btn-social--instagram">
                                    {%- render 'icons', icon: 'instagram' -%}
                                </a>
                            </li>
                        {%- endif -%}
                        {%- if block.settings.tiktok_link != blank -%}
                            <li class="tiktok">
                                <a target="_blank" href="{{ block.settings.tiktok_link }}" class="d-flex justify-content-center align-items-center btn-social--tiktok">
                                    {%- render 'icons', icon: 'tiktok' -%}
                                </a>
                            </li>
                        {%- endif -%}
                    </ul>
                </div>
            {%- endif -%}
            {%- if block.settings.desc != blank -%}
                <div class="about-member__desc">{{ block.settings.desc }}</div>
            {%- endif -%}
        </div>
    </div>
{%- endif -%}