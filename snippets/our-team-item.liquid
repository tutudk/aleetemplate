            {%- endif -%}
            {%- if block.settings.fa_link != blank or block.settings.tw_link != blank or block.settings.in_link != blank  or block.settings.instagram_link != blank or block.settings.tiktok_link != blank -%}
                <div class="about-member__social mb-3">
                    <ul class="about-member__social-list mb-0 list-unstyled d-flex justify-content-{{ section.settings.text_align }}">
                        {%- if block.settings.fa_link != blank -%}
                            <li class="facebook">
                                <a target="_blank" href="{{ block.settings.fa_link }}" class="d-flex justify-content-center align-items-center btn-social--facebook">
                                    {%- render 'icons', icon: 'facebook' -%}
